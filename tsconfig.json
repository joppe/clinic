{
  "compilerOptions": {
      "alwaysStrict": true,
      "baseUrl": "./",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "jsx": "react",
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "removeComments": true,
      "sourceMap": true,
      "strict": true,
      "strictBindCallApply": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "target": "es5"
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
  ]
}
